@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<h3>Tenant: @Model.TenantInfo.tenantId</h3>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employee)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Email</td>
            </tr>
        }
    </tbody>
</table>
